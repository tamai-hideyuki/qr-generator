// frontend/tsconfig.json
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ]
  },

  "include": [
    "src",
    "types"
  ]
}
